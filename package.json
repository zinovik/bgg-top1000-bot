{
    "name": "bgg-top1000-bot",
    "version": "0.1.0",
    "description": "simple telegram bot",
    "main": "index.js",
    "engines": {
        "node": ">=18.0",
        "npm": ">=8.0"
    },
    "scripts": {
        "test": "jest --config jestconfig.json --coverage",
        "build": "rm -rf dist && tsc",
        "dev": "npm run build && GOOGLE_APPLICATION_CREDENTIALS=key-file.json env-cmd npx @google-cloud/functions-framework --target=main --source=dist",
        "deploy": "npm run build && cp package*.json dist && gcloud functions deploy bgg-top1000-bot --gen2 --trigger-http --runtime nodejs20 --timeout=180s --entry-point=main --no-allow-unauthenticated --region=europe-central2 --source=dist --update-build-env-vars=\"GOOGLE_NODE_RUN_SCRIPTS=\" --project zinovik-project --set-secrets=TELEGRAM_TOKEN=bgg-top1000-bot-telegram-token:latest"
    },
    "dependencies": {
        "@google-cloud/functions-framework": "3.4.2",
        "@google-cloud/storage": "7.12.1",
        "axios": "1.7.7",
        "google-auth-library": "9.14.1"
    },
    "devDependencies": {
        "@types/jest": "29.5.12",
        "@types/node": "22.5.4",
        "@typescript-eslint/eslint-plugin": "8.5.0",
        "@typescript-eslint/parser": "8.5.0",
        "env-cmd": "10.1.0",
        "eslint": "9.10.0",
        "jest": "29.7.0",
        "ts-jest": "29.2.5",
        "typemoq": "2.1.0",
        "typescript": "5.6.2"
    },
    "author": "Max Zinovik",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/zinovik/bgg-top1000-bot.git"
    },
    "bugs": {
        "url": "https://github.com/zinovik/bgg-top1000-bot/issues"
    },
    "homepage": "https://github.com/zinovik/bgg-top1000-bot#readme"
}
